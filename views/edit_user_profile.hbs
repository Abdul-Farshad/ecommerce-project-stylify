{{>userNavbar}}

<div class="container-fluid">
    <section class="content-section">
        <i class="fa-solid fa-bars fa-lg main-menu-icon d-md-none" onclick="toggleSidebar()"></i>
        <div class="row">
            {{>userProfileSidebar}}
            <div class="col-md-9">
                <div class="profile-section d-flex justify-content-center align-items-center">
                    <div class="form-container my-3" id="user-profile-edit-form">
                        <h2 class="mb-4 login-header">EDIT PROFILE</h2>
                        {{#if error}}
                        <p class="alert alert-danger p-0 text-center text-sample">{{error}}</p>
                        {{/if}}
                        <form action="/account/update_user_data/{{userData._id}}" method="" id="user-register-form">
                            <div class="form-group">
                                <div><label for="fullName">Full name</label></div>
                                <input type="text" class="form-control signup-input" id="fname"
                                    placeholder="Enter your full name" name="fname"
                                    value="{{#if userData}}{{userData.fname}}{{/if}}">
                                <div class="invalid-feedback" id="fnameError">
                                    Please enter your full name
                                </div>
                            </div>
                            <div class="form-group">
                                <div><label for="username">User name</label></div>
                                <input type="text" class="form-control signup-input" id="username"
                                    placeholder="Enter your username" name="username" {{#if
                                    userData}}value={{userData.userName}}{{/if}}>
                                <div class="invalid-feedback" id="usernameError">
                                    Please enter a username
                                </div>
                            </div>
                            <div class="form-group">
                                <div><label for="email">Email address</label></div>
                                <input type="email" class="form-control signup-input" id="email"
                                    placeholder="Enter your email" name="email" {{#if
                                    userData}}value={{userData.email}}{{/if}}>
                                <div class="invalid-feedback" id="emailError">
                                    Please enter a email address
                                </div>
                            </div>
                            <div class="form-group">
                                <div><label for="mobileNumber">Mobile number</label></div>
                                <input type="tel" class="form-control signup-input" id="mobile"
                                    placeholder="Mobile number" name="mobile" {{#if
                                    userData}}value={{userData.mobileNumber}}{{/if}}>
                                <div class="invalid-feedback" id="mobileError">
                                    Please enter a mobile number
                                </div>
                            </div>
                            <input type="hidden" id="user-id" name="user-id" value="{{userData._id}}">
                            <input type="hidden" id="form-purpose" name="form-purpose" value="update">
                            <input type="submit" class="btn btn-primary mt-2" value="SAVE" id="userReg-submit-btn">
                        </form>
                    </div>

                </div>
                <div class="overlay d-none" id="overlay"></div>
                <div id="otp-section" class="d-none">
                    <div class="modal-content">
                        <span class="close m-2" onclick="closeOtpModal()">&times;</span>
                        <h2>Enter OTP</h2>
                        <p class="login-form-para">Enter the 4-digit OTP sent to your email</p>
                        <p id="timer">0:00</p>
                        <form action="" method="" class="otpForm" id="otp-form">
                            <div class="form-group">
                                <input type="text" placeholder="0" class="code otp-input" maxlength="1" name="code1">
                                <input type="text" placeholder="0" class="code otp-input" maxlength="1" name="code2">
                                <input type="text" placeholder="0" class="code otp-input" maxlength="1" name="code3">
                                <input type="text" placeholder="0" class="code otp-input" maxlength="1" name="code4">
                            </div>
                            <input type="hidden" id="otp-form-purpose" value="update">
                            <p class="text-danger text-sample p-0 m-0" id="otp-error"></p>
                            <p class="text-success text-sample p-0 m-0 d-none" id="otp-resend-msg">New OTP sent.
                                Please
                                check your email</p>
                            <button class="btn btn-primary otp-btn m-3" type="submit">SUBMIT OTP</button>
                            <p class="login-form-para">Didn't get the OTP? <a href="/resend_otp"
                                    onclick="WhenOtpResend(this,20000,event)">Resend OTP</a></p>
                        </form>
                    </div>
                </div>

            </div>
    </section>
</div>